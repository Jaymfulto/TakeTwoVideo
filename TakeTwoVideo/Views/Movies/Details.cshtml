@model TakeTwoVideo.Models.Movie

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>@Model.Name</th>
        </tr>
    </thead>

    <tbody>    
            <tr>
                <td>Genre</td>
                <td>@Model.Genre.Name</td>
            </tr>
            <tr>
                <td>Release Date</td>
                <td>@Model.ReleaseDate</td>
            </tr>
            <tr>
                <td>Date Added</td>
                <td>@Model.DateAdded</td>
            </tr>
            <tr>
                <td>Number in Stock</td>
                <td>@Model.NumberInStock</td>
            </tr>
        
    </tbody>
</table>




